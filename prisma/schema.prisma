generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products { // Tabela para armazenar os produtos disponíveis
  id Int @id @default(autoincrement())
  name String
  description String
  imageLink String 
  price Float

  cart CartProducts[]
}

model CartProducts { // Tabela para armazenar os produtos do carrinho
    id Int @id @default(autoincrement())
    productId Int
    quantity Int

    Product   Products @relation(fields: [productId], references: [id]) // Chave estrangeira
}

model Purchases { // Tabela com o histórico de compras
  id Int @id @default(autoincrement())
  products Json[] // Aqui ele vai armazenar um array de Json's, em cada Json vai ter o id de um produto e a quantidade de selecionados
}


